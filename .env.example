# .env.example - Copy to .env and configure your settings

# ⚠️ CRITICAL: NEETS Amp Network Configuration
# Set this to your actual NEETS Amp IP address!
NEETS_HOST=192.168.10.109
NEETS_PORT=5000

# Server Configuration
WS_PORT=8080
WEB_PORT=3000
NODE_ENV=production

# Polling Configuration
POLL_INTERVAL=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/neets-bridge.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Connection Settings
MAX_RECONNECT_ATTEMPTS=10
RECONNECT_DELAY=5000
CONNECTION_TIMEOUT=10000

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CLIENTS=10

# Security Settings (if authentication is added)
JWT_SECRET=your-secret-key-here
SESSION_SECRET=your-session-secret-here

# Optional: MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=neets/amp

# Optional: InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=neets
INFLUXDB_BUCKET=amplifier_data

# Optional: Email Notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false

# Docker Settings
COMPOSE_PROJECT_NAME=neets-bridge
