{
  "Name": "NEETS Bridge",
  "Description": "Professional control for NEETS Amp systems with real-time feedback",
  "Author": "NEETS Bridge Project",
  "Version": "1.0.0",
  "SDKVersion": 6,
  "OS": [
    {
      "Platform": "windows", 
      "MinimumVersion": "10"
    },
    {
      "Platform": "mac",
      "MinimumVersion": "10.15"
    }
  ],
  "Software": {
    "MinimumVersion": "5.0"
  },
  "CodePath": "app.html",
  "PropertyInspectorPath": "property-inspector.html",
  "DefaultWindowSize": [500, 650],
  "Actions": [
    {
      "UUID": "com.neets.bridge.connection",
      "Name": "Connection Toggle",
      "Icon": "images/connection@2x",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Connect/Disconnect to NEETS Amp (for debugging)",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/connection-off@2x",
          "Name": "Disconnected"
        },
        {
          "Image": "images/connection-on@2x", 
          "Name": "Connected"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.connect",
      "Name": "Connect",
      "Icon": "images/connect@2x",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Connect to NEETS Amp",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/connect@2x"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.disconnect",
      "Name": "Disconnect",
      "Icon": "images/disconnect@2x",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Disconnect from NEETS Amp",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/disconnect@2x"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.power",
      "Name": "Power Control",
      "Icon": "images/power@2x",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Toggle NEETS Amp power on/off",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/power-off@2x",
          "Name": "Power Off"
        },
        {
          "Image": "images/power-on@2x", 
          "Name": "Power On"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.volume",
      "Name": "Volume Control",
      "Icon": "images/volume@2x",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Adjust NEETS Amp volume up/down",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/volume@2x"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.mute",
      "Name": "Mute Control", 
      "Icon": "images/mute@2x",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Toggle NEETS Amp mute on/off",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/mute-off@2x",
          "Name": "Unmuted"
        },
        {
          "Image": "images/mute-on@2x",
          "Name": "Muted"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.source",
      "Name": "Source Selection",
      "Icon": "images/source@2x", 
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Select NEETS Amp input source (1-5)",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/source@2x"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.status",
      "Name": "Status Display",
      "Icon": "images/status@2x",
      "PropertyInspectorPath": "property-inspector.html", 
      "Tooltip": "Display NEETS Amp connection and status info",
      "SupportedInMultiActions": false,
      "States": [
        {
          "Image": "images/status@2x"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.mix",
      "Name": "Mix Control",
      "Icon": "images/mix@2x",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Toggle NEETS Amp mix mode",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/mix@2x"
        }
      ]
    }
  ]
}
