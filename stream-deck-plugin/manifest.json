{
  "Name": "NEETS Bridge",
  "Description": "Professional control for NEETS Amp systems with real-time feedback",
  "Author": "NEETS Bridge Project",
  "Version": "1.0.0",
  "SDKVersion": 2,
  "OS": [
    {
      "Platform": "windows", 
      "MinimumVersion": "10"
    },
    {
      "Platform": "mac",
      "MinimumVersion": "10.15"
    }
  ],
  "Software": {
    "MinimumVersion": "5.0"
  },
  "CodePath": "app.html",
  "PropertyInspectorPath": "property-inspector.html",
  "DefaultWindowSize": [500, 650],
  "Actions": [
    {
      "UUID": "com.neets.bridge.power",
      "Name": "Power Control",
      "Icon": "images/power",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Toggle NEETS Amp power on/off",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/power-off",
          "Name": "Power Off"
        },
        {
          "Image": "images/power-on", 
          "Name": "Power On"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.volume",
      "Name": "Volume Control",
      "Icon": "images/volume",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Adjust NEETS Amp volume up/down",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/volume"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.mute",
      "Name": "Mute Control", 
      "Icon": "images/mute",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Toggle NEETS Amp mute on/off",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/mute-off",
          "Name": "Unmuted"
        },
        {
          "Image": "images/mute-on",
          "Name": "Muted"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.source",
      "Name": "Source Selection",
      "Icon": "images/source", 
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Select NEETS Amp input source (1-5)",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/source-off",
          "Name": "Source Inactive"
        },
        {
          "Image": "images/source-on",
          "Name": "Source Active"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.status",
      "Name": "Status Display",
      "Icon": "images/status",
      "PropertyInspectorPath": "property-inspector.html", 
      "Tooltip": "Display NEETS Amp connection and status info",
      "SupportedInMultiActions": false,
      "States": [
        {
          "Image": "images/status"
        }
      ]
    },
    {
      "UUID": "com.neets.bridge.mix",
      "Name": "Mix Control",
      "Icon": "images/mix",
      "PropertyInspectorPath": "property-inspector.html",
      "Tooltip": "Toggle NEETS Amp mix mode",
      "SupportedInMultiActions": true,
      "States": [
        {
          "Image": "images/mix-off",
          "Name": "Mix Off"
        },
        {
          "Image": "images/mix-on",
          "Name": "Mix On"
        }
      ]
    }
  ]
}
